<% if !flash[:notice].blank? %>
  <div>
    <%= flash[:notice] %>
  </div>
<% end %>

<div>
  <h1><%=@subject.name%></h1>
  <table>
    <tr>
      <th>Name</th>
      <td><%=@subject.name%></td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%=@subject.position%></td>
    </tr>
    <tr>
      <th>Visible</th>
      <td><%=@subject.visible ? 'True' : 'False'%></td>
    </tr>
    <tr>
      <th>Created On</th>
      <td><%=@subject.created_at%></td>
    </tr>
    <tr>
      <th>Updated On</th>
      <td><%=@subject.updated_at%></td>
    </tr>
  </table>
</div>
