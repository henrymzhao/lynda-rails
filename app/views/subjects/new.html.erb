<div>
  <h1>Creating new Subject</h1>

  <table>
    <%= form_for(@subject) do |n| %>
    <tr>
      <th>Name: </th>
      <td><%= n.text_field(:name) %></td>
    </tr>
    <tr>
      <th>Position: </th>
      <td>
        <%= n.text_field(:position) %>
      </td>
    </tr>
    <tr>
      <th>
        Visible:
      </th>
      <td>
        <%= n.text_field(:visible) %>
      </td>
    </tr>
    <tr>
      <%= n.submit("Create Subject") %>
    </tr>
  </table>
  <%end%>
</div>
